<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp">


        <include layout="@layout/header2"
            android:id="@+id/drawer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/itemOneIL"
                    android:layout_weight="1.5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/itemOneTL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="                "
                    android:layout_weight="2"/>

                <ImageButton
                    android:id="@+id/itemOneBL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/itemTwoIL"
                    android:layout_weight="1.5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/itemTwoTL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="                "
                    android:layout_weight="2"/>

                <ImageButton
                    android:id="@+id/itemTwoBL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/itemThreeIL"
                    android:layout_weight="1.5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/itemThreeTL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="                "
                    android:layout_weight="2"/>

                <ImageButton
                    android:id="@+id/itemThreeBL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/itemFourIL"
                    android:layout_weight="1.5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/itemFourTL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="                "
                    android:layout_weight="2"/>

                <ImageButton
                    android:id="@+id/itemFourBL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/itemFiveIL"
                    android:layout_weight="1.5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/itemFiveTL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="                "
                    android:layout_weight="2"/>

                <ImageButton
                    android:id="@+id/itemFiveBL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

        </LinearLayout>
        <include layout="@layout/foot"
            android:id="@+id/drawer"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp">

    </LinearLayout>
    </LinearLayout>
</ScrollView>